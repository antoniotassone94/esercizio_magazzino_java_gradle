<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.antoniotassone.views.VariationsView">
    <Label layoutX="7.0" layoutY="11.0" text="Variations of the item in the warehouse">
        <font>
            <Font size="32.0" />
        </font>
    </Label>
   <Button fx:id="cmdGoToMenu" layoutX="571.0" layoutY="22.0" mnemonicParsing="false" onAction="#handleGoToMenu" prefHeight="25.0" prefWidth="222.0" text="Back go to menu" />
    <Label layoutX="14.0" layoutY="63.0" text="Name" />
   <Label fx:id="lblName" layoutX="54.0" layoutY="63.0" prefHeight="17.0" prefWidth="200.0" />
    <Label layoutX="259.0" layoutY="63.0" text="Description" />
   <Label fx:id="lblDescription" layoutX="324.0" layoutY="63.0" prefHeight="17.0" prefWidth="200.0" />
    <Label layoutX="528.0" layoutY="63.0" text="Price" />
   <Label fx:id="lblPrice" layoutX="560.0" layoutY="63.0" prefHeight="17.0" prefWidth="200.0" />
    <TableView fx:id="tableVariations" layoutY="98.0" prefHeight="452.0" prefWidth="800.0">
        <columns>
            <TableColumn fx:id="columnDate" prefWidth="397.0" text="Date" />
            <TableColumn fx:id="columnQuantity" prefWidth="402.0" text="Quantity" />
        </columns>
    </TableView>
   <Button fx:id="cmdIncreaseQuantity" layoutX="6.0" layoutY="563.0" mnemonicParsing="false" onAction="#handleIncreaseQuantity" prefHeight="25.0" prefWidth="390.0" text="Increase the quantity" />
   <Button fx:id="cmdDecreaseQuantity" layoutX="402.0" layoutY="563.0" mnemonicParsing="false" onAction="#handleDecreaseQuantity" prefHeight="25.0" prefWidth="390.0" text="Decrease the quantity" />
</AnchorPane>
